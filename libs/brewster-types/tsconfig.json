{
  "compilerOptions": {
    "outDir": "lib",
    "rootDirs": ["src/"],
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "module": "commonjs",
    "target": "ESNext",
    "lib": ["ESNext"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "lib"]
}
